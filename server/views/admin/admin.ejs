<%- include("../partials/heading"); -%>
  <nav class="navbar navbar-expand-lg navbar-light bg-light static-top">
    <div class="container">
      <a class="navbar-brand" href="/admin">
        <img src="images/logo.png" alt="..." height="125">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/property" style="margin-bottom: 14px;">Manage Properties</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout" style="color: #C82333;">Log out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <hr>

  <h1 class="heading-left">Important Issues</h1>

  <% results.forEach((property) => { %>
    <div class="card property-card">
      <div class="card-header">
        Property Name: <%= property.name %>
      </div>
      <div class="card-body">
        <h5 class="card-title">Hazard Level: <%= property.sustainabilityFeature.hazardLevel %></h5>
        <p class="card-text">
          Hazard Description: <%= property.sustainabilityFeature.hazardDescription %>
        </p>
        <a href="/property/<%= property.name %>" class="btn btn-primary">View Property</a>
      </div>
    </div>
  <% }); %>

<%- include("../partials/footer"); -%>