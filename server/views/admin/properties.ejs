<%- include("../partials/heading"); -%>

<nav class="navbar navbar-expand-lg navbar-light bg-light static-top">
  <div class="container">
    <a class="navbar-brand" href="/admin">
      <img src="/images/logo.png" alt="..." height="125">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"> 
          <form id="search-form" method="post">

            <div class="input-group mb-3">
              <input required id="search-input" name="keyword" type="text" class="form-control search-bar" placeholder="Search by name..." aria-label="Recipient's username" aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary search" type="submit">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                  </svg>
                </button>
              </div>
            </div>
            
          </form>

          <script>
            const form = document.getElementById('search-form');
            const input = document.getElementById('search-input');

            form.addEventListener('submit', function (event) {
              event.preventDefault(); // Prevent the form from submitting

              const inputValue = input.value;
              const actionUrl = `/property/search/${encodeURIComponent(inputValue)}`;

              this.action = actionUrl;
              this.submit();
            });
          </script>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout" style="color: #C82333;">Log out</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<hr>

<nav class="navbar navbar-expand-lg navbar-light bg-light static-top">
  <div class="container">
    <h1 class="heading-left">Property Roster</h1>
    <div id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/add-property" style="color: #3CAB5A;">Add a Property</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="float-container">

  <% results.forEach((property) => { %>
  <div class="card float-child" style="width: 18rem;">
    <img class="card-img-top" src="/images/card-img.png" alt="Card image cap">
    <div class="card-body">
      <h5 id="<%= property._id %>" class="card-title"><%= property.name %></h5>
      <p class="card-text"><%= property.location %></p>
      <a href="/property/<%= property.name %>" class="btn btn-primary">View Property Profile</a>
    </div>
  </div>
  <% }); %>
</div>

<%- include("../partials/footer"); -%>
